<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android">    <!-- Quyền truy cập mạng, bắt buộc cho Firebase và Google Sign-In -->    <uses-permission android:name="android.permission.INTERNET" />        <!-- Quyền kiểm tra trạng thái mạng, được khuyến nghị -->    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />    <!-- Chỉ yêu cầu quyền ghi bộ nhớ cho Android 9 (API 28) trở xuống -->    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"        android:maxSdkVersion="28" />            <!-- Quyền hiển thị thông báo, cần cho Android 13 (API 33) trở lên -->    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />    <application        android:name=".MyApplication"        android:allowBackup="true"        android:icon="@mipmap/ic_launcher"        android:label="Memer"         android:roundIcon="@mipmap/ic_launcher_round"        android:supportsRtl="true"        android:theme="@style/Theme.MXHApp"> <!-- FIX: Apply new theme -->        <activity android:name=".AdminActivity" android:exported="false" />        <activity android:name=".AccountStatusActivity" android:exported="false" />                <!-- NÂNG CẤP: Sử dụng tên tương đối và khai báo rõ ràng thuộc tính exported -->        <activity android:name=".ShowList" android:exported="false" />        <activity android:name=".NotificationActivity" android:exported="false" />        <activity android:name=".PostDetails" android:exported="false" />        <activity            android:name=".CommentActivity"            android:parentActivityName=".HomeActivity"             android:exported="false" />        <activity android:name=".PostActivity" android:exported="false" />        <activity android:name=".OthersProfile" android:exported="false" />        <activity android:name=".Login" android:exported="true">             <intent-filter>                <action android:name="android.intent.action.MAIN" />                <category android:name="android.intent.category.LAUNCHER" />            </intent-filter>        </activity>        <activity            android:name=".SearchUsers"            android:parentActivityName=".HomeActivity"             android:exported="false" />        <activity            android:name=".HomeActivity"            android:exported="false" />        <activity            android:name=".MainActivity"            android:exported="false" />        <activity            android:name=".EditProfileActivity"            android:exported="false" />                <!-- NÂNG CẤP: Đặt SplashActivity làm màn hình khởi chạy chính xác -->        <activity            android:name=".SplashActivity"            android:exported="true">             <intent-filter>                <action android:name="android.intent.action.MAIN" />                <category android:name="android.intent.category.LAUNCHER" />            </intent-filter>        </activity>        <activity            android:name="com.canhub.cropper.CropImageActivity"            android:theme="@style/Base.Theme.AppCompat" />        <meta-data            android:name="preloaded_fonts"            android:resource="@array/preloaded_fonts" />    </application></manifest>